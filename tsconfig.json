{
    "compilerOptions": {
        "jsx": "preserve",
        "allowJs": false,
        "target": "es5",
        "baseUrl": "./src",
        "strict": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "**/*.ts",
        "types/*.ts",
        "**/*.tsx",
        "src/index.js"
    ],
    "exclude": [
        "node_modules"
    ]
}